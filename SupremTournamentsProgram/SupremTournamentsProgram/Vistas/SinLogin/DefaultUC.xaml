<UserControl x:Class="SupremTournamentsProgram.Vistas.SinLogin.DefaultUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupremTournamentsProgram.Vistas.SinLogin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Bienvenido a Suprem Torunaments" FontSize="34" HorizontalAlignment="Center" />
        <Image Grid.Row="1" Source="/Assets/favicon.ico" Width="250"/>
        <TextBlock Grid.Row="2" FontSize="20" Text="Un programa donde podrás ver los torneos disponibles y solicitar participar, si eres gestor podrás gestionarlos" TextWrapping="Wrap" TextAlignment="Justify" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" FontSize="20" Text="Creado por Sr.J" TextWrapping="Wrap" TextAlignment="Justify" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
